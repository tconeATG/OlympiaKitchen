<h1>Listing recipes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Recipe</th>
    <th>Ingredients</th>
    <th>Time til grub</th>
    <th>Skill</th>
    <th>Rank</th>
    <th>Image</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @recipes.each do |recipe| %>
  <tr>
    <td><%= recipe.name %></td>
    <td><%= recipe.recipe %></td>
    <td><%= recipe.ingredients %></td>
    <td><%= recipe.time_til_grub %></td>
    <td><%= recipe.skill %></td>
    <td><%= recipe.rank %></td>
    <td><%= recipe.image %></td>
    <td><%= link_to 'Show', recipe %></td>
    <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
    <td><%= link_to 'Destroy', recipe, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

