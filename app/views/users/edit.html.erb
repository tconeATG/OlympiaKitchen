<% provide(:title, "Edit user") %> 
<h1>Update your profile</h1>


<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :gender %>
  <%= f.text_field :gender %>
  
  <%= f.label :weight %>
  <%= f.text_field :weight %> (pounds)
  
  <%= f.label :height %> 
  <%= f.text_field :height %> (inches)
 
  <%= f.label :fitness_level %>
  <%= f.number_field :fitness_level %>
  <div class="field">
  	<label>Dietary Preferences(select all that apply hold control + click)</label>
  	<%=select_tag 'tags[]', options_for_select(@tags.map {|s| [s.name, s.id]}), :multiple => true, :size => 10 %>
  </div>
  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, "Confirm Password" %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "Save changes", :class => "btn btn-large btn-primary" %>
<% end %>

<%= gravatar_for @user %>
<a href="http://gravatar.com/emails">change</a>
